@model IEnumerable<Service>
<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Service Table</h4>
            <p class="card-description">
                <a class="btn btn-primary" asp-controller="Service" asp-action="Create"> Create Service</a>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Icon</th>
                            <th>Title</th>
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
            <tr>

                <td>
                    <img style="width:150px; height:150px" src="~/images/service-icon/@item.IconUrl"/>
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    <a asp-controller="Service" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">
                    <i class="mdi mdi-table-edit"></i></a>
                    <a asp-controller="Service" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                        <i class="mdi mdi-account-card-details"></i></a>
                    <a asp-controller="Service" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                    <i class="mdi mdi-account-remove"></i></a>

                </td>
            </tr>
}


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>